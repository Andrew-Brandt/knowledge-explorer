# === Flask App Config ===
FLASK_APP=run.py
FLASK_ENV=production
SECRET_KEY=dev-secret-key-12345

# === Database Config ===
# Use one of the following database options
# PostgreSQL (recommended for production)
# SQLite (for local dev or quick testing)
# Leave the other commented out

DATABASE_URL=postgresql://postgres:changeme123@db:5432/yourdb
# DATABASE_URL=sqlite:///instance/myapp.db

# For Postgres (used by docker-compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme123
POSTGRES_DB=yourdb

# === Redis Cache Config ===
REDIS_URL=redis://redis:6379/0
CACHE_DEFAULT_TIMEOUT=86400

# === API Keys ===
ANTHROPIC_API_KEY=your-api-key-here
